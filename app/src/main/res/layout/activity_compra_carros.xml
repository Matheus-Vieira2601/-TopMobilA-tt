<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".compra_carros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#800080"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/icone_usuario" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logo_topmobil_branca" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/risquinho" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="#5E005E">

        <TextView
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:text="Compra de carros"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="33dp"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/lupa_branca"
            android:layout_marginVertical="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/anuncioCarro"
                android:layout_width="350dp"
                android:layout_height="fill_parent"
                android:background="#800080"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/imgCarro"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/carro1"/>

                <TextView
                    android:id="@+id/nomeCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Volkswagen Jetta"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/imgCarro"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/modeloCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="Novo Jetta GLI 350 TSI"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_below="@id/nomeCarro" />

                <TextView
                    android:id="@+id/quilometragemCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="0 Km"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/nomeCarro"/>

                <TextView
                    android:id="@+id/precoCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="R$ 250.000,00"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_below="@id/modeloCarro"/>

                <TextView
                    android:id="@+id/corCarro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="Prata"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_below="@id/modeloCarro"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>